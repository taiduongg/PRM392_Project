<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Gundam Image -->
            <ImageView
                android:id="@+id/imgGundam"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="" />

            <!-- Gundam Name -->
            <TextView
                android:id="@+id/tvGundamName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="RX-78-2 Gundam"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222" />

            <!-- Gundam Price -->
            <TextView
                android:id="@+id/tvGundamPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="₫1,200,000"
                android:textColor="#FF5722"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/tvGundamDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Mô hình Gundam cao cấp, thiết kế tinh xảo, có thể pose đủ thế ngầu lòi, tặng kèm beam saber và súng trường."
                android:textSize="15sp"
                android:textColor="#555" />

            <!-- Quantity Picker -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng:"
                    android:textSize="15sp"
                    android:textColor="#333"
                    android:layout_marginEnd="8dp"/>

                <NumberPicker
                    android:id="@+id/numberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:maxValue="10"
                    android:minValue="1" />
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:weightSum="2"
                android:gravity="center">

                <Button
                    android:id="@+id/btnAddGundamToCart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thêm vào giỏ"
                    android:textSize="15sp"
                    android:drawableStart="@drawable/ic_cart_small"
                    android:drawablePadding="8dp"
                    android:backgroundTint="@color/green_primary"
                    android:textColor="@color/green_text"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnBuyNow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mua ngay"
                    android:textSize="15sp"
                    android:drawableStart="@drawable/ic_flash_buy"
                    android:drawablePadding="8dp"
                    android:backgroundTint="#FF5722"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
